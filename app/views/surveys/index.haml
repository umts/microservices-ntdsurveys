%table
  %thead
    %tr
      %th Survey #
      %th Date
      %th Shift
      %th Time
      %th Starting Passengers
      %th Completed?
      %th
      %th
  %tbody
    - @surveys.each do |survey|
      %tr
        %td= survey.id
        %td= survey.date.strftime("%m/%d/%Y")
        %td= survey.shift
        %td= survey.date.strftime("%H:%M")
        %td= survey.starting_pax
        %td
          - if survey.completed
            Yes
          - else
            No
        %td= link_to "View", survey_path(survey.id)
        %td= link_to "Edit", edit_survey_path(survey.id)
